import ReturnResults.dzn;

interface iControl
{
	in returnResult tac_getTheBall();
  	in returnResult tac_shootBall();
  	in returnResult tac_attack();

  	behaviour
  	{
  		on tac_getTheBall:{
  			reply(returnResult.busy);
  		}
  		on tac_getTheBall:{
  			reply(returnResult.success);
  		}
  		on tac_getTheBall:{
  			reply(returnResult.fail);
  		}
  		on tac_shootBall:{
  			reply(returnResult.busy);
  		}
  		on tac_shootBall:{
  			reply(returnResult.success);
  		}
  		on tac_shootBall:{
  			reply(returnResult.fail);
  		}
  		on tac_attack:{
  			reply(returnResult.busy);
  		}
  		on tac_attack:{
  			reply(returnResult.success);
  		}
  		on tac_attack:{
  			reply(returnResult.fail);
  		}
	}
}

